<%= form_with model: Article.new, data: { reflex: "submit->ArticleReflex#create" } do |form| %>
  <div id="test"></div>
  <div class="card-body">
    <h5 class="card-title">Preencha os campos abaixo para adicionar um item</h5>
    <div class="card-text">
      <% flash.each do |type, msg| %>
        <div class="<%=css_alert_by_flash(type)%>">
          <%= msg %>
        </div>
      <% end %>
      <div class="mb-3">
        <%=form.label :title, class: 'form-label' %>
        <%=form.text_field :title, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%=form.label :content, class: 'form-label' %>
        <%=form.text_area :content, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <button class="btn btn-primary">Salvar</button>
  </div>
<% end %>